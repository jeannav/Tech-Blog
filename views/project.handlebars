<div class="text-center">
  <h2>{{name}}</h2>
  <br>
  <p>{{description}}</p>
  <br>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <button class="btn btn-primary" data-id="{{project.id}}">UPDATE</button>
  <button class="btn btn-danger" data-id="{{project.id}}">DELETE</button>
  </p>
</div>
<br>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Leave a Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <textarea class="form-input" id="comment-desc" name="comment-desc" value="Required Field"
          placeholder="Required field for new comments"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary">SUBMIT</button>
      </div>
    </form>
  </div>
  {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>All Comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{comment.text}}</h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>